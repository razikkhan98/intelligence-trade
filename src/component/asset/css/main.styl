			width auto
	&__btn
		position absolute
		width 24px
		height 22px
		display block
		left 0
		span
			position absolute
			left 0
			width 24px
			height 2px
			background-color $white
			border-radius 2px
			transition .5s ease
			opacity 1
			&:first-child
				top 0
			&:nth-child(2)
				top 10px
				width 16px
			&:last-child
				top 20px
				width 8px
		&--active
			span
				&:first-child
					transform rotate(45deg)
					top 10px
				&:nth-child(2)
